<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/machine_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:padding="20dp">


            <RelativeLayout
                android:id="@+id/machine_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/machine_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Machine Title"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/machine_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:clickable="false"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/last_maintenance_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Maintenance Date: 1970-01-01"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/api_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="API Key: 8732798dsy9837asjdy38979"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/water_level_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Water Level:"
                android:textAlignment="center"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/water_level_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textAlignment="center"
                android:textSize="15dp" />

            <ProgressBar
                android:id="@+id/water_level_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:min="0"
                android:max="100"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>